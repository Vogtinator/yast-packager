/*
 * Test ChangeCD
 */

{
  include "testsuite.ycp";

  map user_settings = $[];

  map exec_map = $["target": $["bash": 0 ]];
  
  map read_map =
      $["run": $["df"	:
		[$["dummy":"on", "free":"Available", "name":"Mounted", "prz":"Capacity", "spec":"Filesystem", "used":"Used", "whole":"1024-blocks"],
		$["free":"144988", "name":"/", "prz":"93%", "spec":"/dev/sda1", "used":"1733600", "whole":"1981000"],
		$["free":"2124147", "name":"/usr", "prz":"66%", "spec":"/dev/sda3", "used":"4080331", "whole":"6543449"] ] ],
       
       "yast2": $["instsource"	: $["cdnum": 1,
				   "cdrelease": 1234] ],
       
       "probe": $["cdrom"	: [$["dev_name":"/dev/sr0"]],
		 "architecture": "i386"],
       
       "target": $[ "root"	: "/" ]
      ];

  DUMP( "TEST 1: argument test_input1 -> delete 3d_chess, tuxeyes, xroach, userInput false" );
  TEST( `sw_single(.test, "test_input1"), [read_map, $[], exec_map], $[] );

  DUMP( "TEST 2: argument test_input2 -> install tuxeyes/xroach, userInput true" );
  TEST( `sw_single(.test, "test_input1"), [read_map, $[], exec_map], $[] );

  DUMP( "TEST 3: argument test_input3 -> install 3d_chess, delete  tuxeyes/xroach, userInput false" );
  TEST( `sw_single(.test, "test_input2"), [read_map, $[], exec_map], $[] );


}
